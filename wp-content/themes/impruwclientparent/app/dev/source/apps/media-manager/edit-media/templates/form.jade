form(action='', method='POST', role='form')
	legend Edit Media
	.form-group
		label(for='') Title
		input.form-control(type='text', placeholder='', value="{{title}}")
	.form-group
		label(for='') Caption
		input.form-control(type='text', placeholder='', value="{{caption}}")
	.form-group
		label(for='') Alt Text
		input.form-control(type='text', placeholder='', value="{{alt}}")
	.form-group
		label(for='') Description
		input.form-control(type='text', placeholder='', value="{{description}}")

	h5 Advanced Media settings
	.form-group
		label(for='') Size
		select(name="size")
			{{#sizes}}
			option(value="{{sizename}}") {{sizename}}
			{{/sizes}}
	button.btn.btn-primary(type='button') Save
	