header.settings-header
	.row
		.col-sm-10
			h5.title {{config.element}} Settings
		.col-sm-2.close-btn
			a(class='close-settings', href='#') &times;
	.row
		.col-sm-12
			form(action='', method='POST', role='form')
				.form-group
					label(for='') Choose Style
					select(name="style")
						option(value="") None
						{{#config.styles}}
						option(value="{{.}}") {{.}}
						{{/config.styles}}
				.form-group
					label.pull-left(for='') Draggable
					span.checkbox.pull-left
						input(type='checkbox' name="draggable")
				.clearfix
				.form-group
					label(for='') No of columns
					.set-column-count
						a.btn.badge 1
						a.btn.badge 2
						a.btn.badge 3
						a.btn.badge 4
						a.btn.badge 6
						