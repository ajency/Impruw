header.settings-header
	.row
		.col-sm-10
			h5.title {{config.element}} Settings
		.col-sm-2.close-btn
			a(class='close-settings', href='#') &times;
	.row
		.col-sm-12
			form(action='', method='POST', role='form')
				.form-group
					label(for='') Choose Style
					select(name="style")
						{{#templates}}
						option(value="{{slug}}") {{name}}
						{{/templates}}
				.form-group
					label(for='') Choose Menu
					select(name="choose-menu")
						{{#site_menus}}
						option(value="{{menu_id}}") {{menu_name}}
						{{/site_menus}}
				.form-group
					label.pull-left(for='') Draggable
					span.checkbox.pull-left
						input(type='checkbox' name="draggable")
				.form-group
					label.pull-left(for='') Justified
					span.checkbox.pull-left
						input(type='checkbox' name="justified")
						