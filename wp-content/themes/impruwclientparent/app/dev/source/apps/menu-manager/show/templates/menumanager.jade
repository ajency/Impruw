ul.nav.nav-tabs
	li.active: a(href="#{{menu_slug}}") {{menu_name}}

.tab-content
	.tab-pane.active(id="#{{menu_slug}}")
		.row.aj-imp-menu-edit
			.col-md-6.aj-imp-add-menu-item
				h4 {{menu_name}}
				p.desc {{menu_description}}
				a.aj-imp-add-link(href="#{{menu_slug}}-add-menu" data-toggle="collapse") Add New Menu Item
				.collapse.in.add-menu-form(id="{{menu_slug}}-add-menu")
					form.form-horizontal.well(parsley-validate="true")
						.form-group
							label.col-sm-4.control-label Menu Link Label
							.col-sm-8
								input.required.form-control(type="text" name="item-title" parsley-required="true")
						.form-group
							label.col-sm-4.control-label Menu Link
							.col-sm-8
								input.required.form-control(type="text" name="item-url" parsley-type="url" parsley-required="true")
						.form-group.form-actions
							.col-sm-offset-4.col-sm-8
								input(type="hidden")

			.col-md-6.aj-imp-menu-item-list
				.panel.panel-default
					.panel-heading
						h3.panel-title {{menu_name}}
					ol.list-group.sortable-menu-items