<div class="add-page">
	<form class="form-horizontal clearfix">
		<h5>Give Your Page a Name</h5>
		<div class="form-group">
			<div class="col-sm-12">
				<input type="text" class="form-control" required id="page_name" name="page_name" placeholder="Page Name" value="" /> 
			</div>
		</div>
		<h5>Choose a Layout for Your Page</h5>
		<div class="aj-imp-block-list">
			<ul class="selectable-layout">
				<li class="block" data-layout="home">
					<div class="img-holder">
						<img src="http://localhost/impruw/bluebold/wp-content/themes/impruwclientparent/images/layout.png">
					</div>
					<h6 class="desc">Layout 1</h6>
					<div class="aj-imp-choose-btn">
						<a class="btn" href="#"><span class="glyphicon glyphicon-ok"></span>&nbsp;Choose</a>
					</div>
				</li>
				<li class="block" data-layout="about-us">
					<div class="img-holder">
						<img src="http://localhost/impruw/bluebold/wp-content/themes/impruwclientparent/images/layout.png">
					</div>
					<h6 class="desc">Layout 2</h6>
					<div class="aj-imp-choose-btn">
						<a class="btn" href="#"><span class="glyphicon glyphicon-ok"></span>&nbsp;Choose</a>
					</div>
				</li>
				<li class="block" data-layout="contact-us">
					<div class="img-holder">
						<img src="http://localhost/impruw/bluebold/wp-content/themes/impruwclientparent/images/layout.png">
					</div>
					<h6 class="desc">Layout 3</h6>
					<div class="aj-imp-choose-btn">
						<a class="btn" href="#"><span class="glyphicon glyphicon-ok"></span>&nbsp;Choose</a>
					</div>
				</li>
			</ul>
			<input type="hidden" name="layout_page" value="home" />
		</div>
		<div class="save-page">
			<button type="button" class="btn btn-wide add-new-page"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Add Page</button>
			<input type="reset" class="hidden"/>
		</div>
	</form>
</div>